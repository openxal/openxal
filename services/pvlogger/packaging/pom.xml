<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.xal</groupId>
		<artifactId>openxal-packaging</artifactId>
		<version>1.1</version>
		<relativePath>../../../packaging/pom.xml</relativePath>
	</parent>
	
	<groupId>se.esss.codac.units</groupId>
	<artifactId>openxal-pvlogger-service</artifactId>
	<version>1.0</version>

	<packaging>codac</packaging>
	<name>PVLogger Service</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-iter-plugin</artifactId>

				<configuration>
					<packaging>
						<package>
							<dependency>java-${java.version}-${java.vendor}</dependency>
							<requires version="current">%{codac_rpm_prefix}-openxal-core</requires>	
							<requires version="current">%{codac_rpm_prefix}-openxal-ess-data</requires>												
							<requires version="current">%{codac_rpm_prefix}-postgres-iter</requires>												

							<include type="config" source="pvlogger-data/local.dbconfig" target="openxal/" />
							<include type="config" source="pvlogger-data/pvlogger-postgres-schema.xml" target="openxal/" />
							<include type="config" source="main/conf/xal.tools.database" target="openxal/" />
							<include type="config" source="main/conf/create-pvlogger-postgres.sql" target="openxal/" />
							<include type="file" source="pvlogger/openxal.services.pvlogger-${openxal.version}.jar" target="lib/openxal/" />	
							<include type="script" file="pvlogger-service.sh" scripttype="user" name="pvlogger-service" />					
							<scriptlet type="posttrans"><![CDATA[
								unset NOCHANGE_EC
								%{codac_root}/bin/initdb user "pvlog" --create-or-update --password "pvlog"
								%{codac_bin}/initdb database "pvlog" --create-with "TEMPLATE = template0 ENCODING = 'UTF8' LC_COLLATE = 'en_US.UTF-8' LC_CTYPE = 'en_US.UTF-8'" --init "%{codac_conf}/openxal/create-pvlogger-postgres.sql"
								if [ $? -eq 0 ]; then
				  					# create database user or update it's password and permissions
				  					%{codac_root}/bin/initdb database pvlog --priv-all "pvlog"
								fi

								cd %{codac_conf}/openxal
							]]></scriptlet>
						</package>
					</packaging>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-1</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/pvlogger-data</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../../../core/test/resources/config</directory>
									<include>local.dbconfig</include>
									<include>pvlogger-postgres-schema.xml</include>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources-2</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/pvlogger</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../../pvlogger/target</directory>
									<include>openxal.services.pvlogger-${openxal.version}.jar</include>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>	
		<dependency>
			<groupId>postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>9.1-901.jdbc4</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
</project>
